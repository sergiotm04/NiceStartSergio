<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button1Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Button2Style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/light_blue</item>
        <item name="colorOnSurface">@color/red</item>
    </style>

    <style name="buttonbackmain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">260dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/blue</item>
    </style>
</resources>